extends layout

block content 
  div(ng-controller="indexController", ng-init="init()")
    .ui.one.column.stackable.center.aligned.page.grid.margin-30
      .column.twelve.wide
        .ui.stacked.segment.gameArea(ng-click="onClickPlayer($event)")
          .circle(ng-repeat="player in players", ng-style="{'left':player.position.y,'top':player.position.x}", id = "{{ player.id }}" class="{{player.color}}")
            .relative
              span.name {{player.username}}
              //.message
        .ui.items.chat
          .item(ng-repeat="message in messages")
            .content(ng-if="!message.type.code")
              span 
                b [SERVER] &nbsp;
              a.header.name {{message.username}} &nbsp;
              .description.message(ng-if="!message.type.message") {{message.text}} ayr覺ld覺
              .description.message(ng-if="message.type.message") {{message.text}} kat覺ld覺
        .ui.action.input.fluid(ng-submit="newMessage()")
          input(ng-model='message', placeholder='Type here...')
          button.ui.button(type="submit") Send

